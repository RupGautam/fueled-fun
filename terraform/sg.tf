
resource "aws_security_group" "worker_group_sg_1" {
  name_prefix = "Worker-Group-${var.env}-SG-1"
  vpc_id      = module.vpc.vpc_id

  ingress {
    from_port = 22
    to_port   = 22
    protocol  = "tcp"

    cidr_blocks = [
      "10.0.0.0/8",
    ]
  }
}

