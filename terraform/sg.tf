resource "aws_security_group" "worker_group_sg" {
  name_prefix = "Work-Group-${var.env}-SG"
  vpc_id      = module.vpc.vpc_id

  ingress {
    from_port = 22
    to_port   = 22
    protocol  = "tcp"

    cidr_blocks = [
